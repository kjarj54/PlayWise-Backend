# =========================
# APPLICATION
# =========================
PROJECT_NAME="PLAYWISE API"
APP_NAME=PlayWise API
APP_VERSION=1.0.0
API_PREFIX="/api"
DEBUG=false

# =========================
# DATABASE
# =========================
# CockroachDB Connection String
# Formato: cockroachdb://username:password@host:port/database?sslmode=verify-full
DATABASE_URL=cockroachdb://tu_usuario:tu_password@tu-cluster.cockroachlabs.cloud:26257/playwise?sslmode=verify-full
DB_ECHO=false

# =========================
# SECURITY & JWT
# =========================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================
# PASSWORD SECURITY
# =========================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=false

# =========================
# OAUTH2 - GOOGLE (Opcional)
# =========================
# Get from: https://console.cloud.google.com/apis/credentials
# Para React Native necesitas configurar OAuth2 con Expo AuthSession
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =========================
# EMAIL (SMTP)
# =========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@playwise.com
SMTP_FROM_NAME=PlayWise

# =========================
# EXTERNAL APIs
# =========================
# RAWG API - Para informaci√≥n de juegos
# Get your API key at: https://rawg.io/apidocs
RAWG_API_KEY=your-rawg-api-key

# CheapShark API - Para precios de juegos en tiendas
# No requiere API key, es gratuita
# Docs: https://apidocs.cheapshark.com/
CHEAPSHARK_API_URL=https://www.cheapshark.com/api/1.0
